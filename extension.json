{
	"name": "PageToGitHub",
	"author": "Luca Mauri",
	"url": "https://github.com/lucamauri/PageToGitHub/issues",
	"description": "Allow the transport of page content to GitHub on page save",
	"version": "0.1",
	"license-name": "GPL-2.0-or-later",
	"type": "parserhook",
	"manifest_version": 1,
	"AutoloadClasses": {
		"PageToGitHubHooks": "PageToGitHub.php"
	},
    "Hooks": {
        "PageContentSaveComplete": ["PageToGitHubHooks::onPageContentSaveComplete"]
	},
	"config": {
		"P2GNameSpace": {
			"description": "Label of the namespace to check",
			"value": null
		},
		"P2GPathAPI": {
			"description": "Full path to php-github-api file",
			"value": null
		},
		"P2GAuthToken": {
			"description": "Personal GitHub token",
			"value": null
		}
	},
	"ConfigRegistry": {
		"PageToGitHub": "GlobalVarConfig::newInstance"
	}
}